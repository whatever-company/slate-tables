{
	"name": "@eliumhq/slate-tables",
	"version": "1.0.12",
	"description": "A Slate plugin to handle table edition",
	"main": "./dist/index.js",
	"files": [
		"dist",
		"lib",
		"*.md"
	],
	"peerDependencies": {
		"react": "^16.9.0",
		"react-dom": "^16.9.0",
		"slate": "^0.47.8",
		"slate-react": "^0.22.8"
	},
	"dependencies": {
		"core-js": "3.6.4",
		"is-hotkey": "0.1.6"
	},
	"devDependencies": {
		"@babel/cli": "7.8.3",
		"@babel/core": "7.8.3",
		"@babel/plugin-proposal-class-properties": "7.8.3",
		"@babel/preset-env": "7.8.3",
		"@babel/preset-react": "7.8.3",
		"babel-eslint": "10.0.3",
		"babel-jest": "25.1.0",
		"eslint": "6.8.0",
		"eslint-config-prettier": "6.9.0",
		"eslint-config-standard": "14.1.0",
		"eslint-config-standard-react": "9.2.0",
		"eslint-plugin-babel": "5.3.0",
		"eslint-plugin-import": "2.20.0",
		"eslint-plugin-node": "11.0.0",
		"eslint-plugin-prettier": "3.1.2",
		"eslint-plugin-promise": "4.2.1",
		"eslint-plugin-react": "7.18.0",
		"eslint-plugin-react-hooks": "2.3.0",
		"eslint-plugin-standard": "4.0.1",
		"immutable": "4.0.0-rc.12",
		"jest": "25.1.0",
		"jest-diff": "25.1.0",
		"jest-watch-typeahead": "0.4.2",
		"lodash.isequal": "4.5.0",
		"parcel-bundler": "1.12.4",
		"prettier": "1.19.1",
		"react": "16.12.0",
		"react-dom": "16.12.0",
		"react-test-renderer": "16.12.0",
		"slate": "^0.47.8",
		"slate-hyperscript": "^0.13.8",
		"slate-react": "npm:druide-slate-react",
		"standard-version": "7.1.0"
	},
	"scripts": {
		"test": "NODE_ENV=test jest --roots --roots ./tests",
		"start": "parcel examples/index.html",
		"build-examples": "rm -rf ./dist-examples;parcel build examples/index.html -d dist-examples --public-url /slate-tables",
		"release": "standard-version",
		"build": "rm -rf ./dist; NODE_ENV=production babel lib --out-dir dist",
		"prepack": "npm run build"
	},
	"jest": {
		"notify": false,
		"globals": {
			"__DEV__": false,
			"__PROD__": true,
			"__TEST__": true
		},
		"setupFilesAfterEnv": [
			"<rootDir>/jest.setup.js"
		],
		"testPathIgnorePatterns": [
			"/node_modules/",
			"/fixtures/"
		],
		"moduleFileExtensions": [
			"js",
			"jsx",
			"json"
		],
		"moduleDirectories": [
			"node_modules",
			"<rootDir>"
		],
		"roots": [
			"<rootDir>"
		],
		"testMatch": [
			"<rootDir>/tests/**/*.js",
			"<rootDir>/tests/**/*.jsx"
		],
		"transform": {
			"^.+\\.jsx?$": "babel-jest"
		},
		"watchPlugins": [
			"jest-watch-typeahead/filename",
			"jest-watch-typeahead/testname"
		]
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env"
			]
		],
		"plugins": [
			"@babel/plugin-proposal-class-properties"
		]
	},
	"repository": "git@github.com:whatever-company/slate-tables.git",
	"author": "Elium <info@elium.com>",
	"license": "MIT"
}
